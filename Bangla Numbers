#include<iostream>

using namespace std;

void conversion(long long n)
{
    if(n>=10000000)
    {
        conversion(n/10000000);
        cout << " kuti";
        n %=10000000;
    }
    
    if(n>=100000)
    {
        conversion(n/100000);
        cout << " lakh";
        n %=100000;
    }
    
    if(n>=1000)
    {
        conversion(n/1000);
        cout << " hajar";
        n %=1000; 
    }
    
    if(n>=100)
    {
        conversion(n/100);
        cout << " shata";
        n %=100;
    }
    
    if(n>0)
    {
        cout << " " << n;
        
    }
}

int main()
{
    long long n;
    int caseNo = 1;
    while(cin >> n)
    {
        cout<< caseNo <<".";
        if(n==0)
        {
            cout << "0 "<<endl;
        }
        else{
            conversion(n);
            cout <<endl;
        }
        caseNo++;
    }
    return 0;
}
