#include<iostream>
using namespace std;

int main()
{
long long a, b, carry;

while(cin>> a >> b)
{
  if(a==0 && b==0)break;
     int carry=0, count=0;

     while(a >0|| b>0)
{
     int digitA = a %10;
     int digitB = b%10;
    if(digitA + digitB >=10)
{
      carry =1;
      count++;
}
else{
     carry = 0;
}

} 
if(count==0){
cout << "No carry operation" << endl;
}
else if(count==1)
{
cout << "1 carry operation" <<endl;
}
else{
cout << count << "carry operations";
}

}

}
